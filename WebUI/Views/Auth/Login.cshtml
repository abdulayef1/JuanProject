@using WebUI.ViewModels.AuthViewModels
@model LoginViewModel
@{
	ViewData["Title"] = "Login";
}


<div class="login-register-wrapper section-padding">
	<div class="container">
		<div class="member-area-from-wrap">
			<div class="row">
				<!-- Login Content Start -->
				<div class="col-lg-6">
					<div class="login-reg-form-wrap">
						<h2>Sign In</h2>
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<form  method="post">
							<div class="single-input-item">
							<input asp-for="EmailOrUsername" placeholder="Email or Username"  />
							</div>
							<span asp-validation-for="EmailOrUsername" class="text-danger"></span>
							<div class="single-input-item">
								<input asp-for="Password" placeholder="Enter your Password"/>
							</div>
							<span asp-validation-for="Password" class="text-danger"></span>
							<div class="single-input-item">
								<div class="login-reg-form-meta d-flex align-items-center justify-content-between">
									<div class="remember-meta">
										<div class="custom-control custom-checkbox">
											<input type="checkbox" class="custom-control-input" id="rememberMe">
											<label asp-for="RememberMe" class="custom-control-label" >Remember Me</label>
										</div>
									</div>
									<a  class="forget-pwd">Forget Password?</a>
								</div>
							</div>
							<div class="single-input-item">
								<button type="submit" class="btn">Login</button>
							</div>
						</form>
					</div>
				</div>
				<!-- Login Content End -->
			</div>
		</div>
	</div>
</div>
